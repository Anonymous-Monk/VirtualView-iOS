<?xml version="1.0" encoding="utf-8"?>
<VHLayout
        flag="flag_exposure|flag_clickable"
        orientation="V"
        layoutWidth="match_parent"
        layoutHeight="match_parent"
>
    <NText
            text="Title: text"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
            layoutWidth="wrap_content"
            layoutHeight="20" />

    <NText
            text="Title: textSize = 16"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="16"
            textColor="#333333"
            layoutWidth="wrap_content"
            layoutHeight="20" />

