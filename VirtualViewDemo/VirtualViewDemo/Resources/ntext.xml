            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
            textStyle="strike"
            layoutWidth="wrap_content"
            layoutHeight="20" />

    <NText
            text="Title: textStyle = italic"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
            textStyle="italic"
            layoutWidth="wrap_content"
            layoutHeight="20" />

    <NText
            text="Title: borderWidth = 1 borderColor = #0088FF"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
            borderColor="#0088FF"
            borderWidth="1"
            layoutWidth="wrap_content"
            layoutHeight="20" />

    <NText
            text="Title: gravity = h_center|v_center"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
            borderColor="#0088FF"
            borderWidth="1"
            gravity="h_center|v_center"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Title: background = #008899"
            textSize="12"
            textColor="#333333"
            background="#008899"
            layoutWidth="match_parent"
            layoutHeight="20" />

    <NText
            text="Hello Virtual View"
            textSize="12"
            textColor="#333333"
