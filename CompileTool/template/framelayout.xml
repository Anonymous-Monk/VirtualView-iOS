<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        layoutWidth="match_parent"
        layoutHeight="700"
        background="#FFFFFF">
    <NText
            text="width = match_parent"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            gravity="left|v_center"/>
    <FrameLayout
            layoutWidth="match_parent"
            layoutHeight="100"
            layoutMarginTop="20"
            background="#0000FF"
            borderColor="#FF0000"
            borderWidth="1"
            borderRadius="10"/>
    <NText
            text="width = fixed"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="120"
            gravity="left|v_center"/>
    <FrameLayout
            layoutWidth="100"
            layoutHeight="100"
            layoutMarginTop="140"
            background="#0000FF"
            borderColor="#FF0000"
            borderWidth="1"
            borderTopLeftRadius="5"
            borderTopRightRadius="15"
            borderBottomLeftRadius="15"
            borderBottomRightRadius="5"/>
    <NText
            text="size = wrap_content"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="240"
            gravity="left|v_center"/>
    <FrameLayout
            layoutWidth="wrap_content"
            layoutHeight="wrap_content"
            layoutMarginTop="260"
            borderColor="#FF0000"
            borderWidth="1"
            paddingLeft="10"
            paddingRight="10"
            paddingTop="5"
            paddingBottom="5">
        <FrameLayout
                layoutWidth="150"
                layoutHeight="50"
                layoutMarginTop="50"
                background="#800000FF"/>
        <FrameLayout
                layoutWidth="50"
                layoutHeight="150"
                layoutMarginLeft="50"
                background="#800000FF"/>
    </FrameLayout>
    <NText
            text="autoDim = X"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginTop="420"
            gravity="left|v_center"/>
    <FrameLayout
            layoutWidth="match_parent"
            layoutMarginTop="440"
            autoDimDirection="X"
            autoDimX="4"
            autoDimY="1"
            background="#0000FF"/>
    <NText
            text="gravity = h_center|bottom"
            textSize="12"
            textColor="#333333"
            background="#cccccc"
            layoutWidth="match_parent"
            layoutHeight="20"
            layoutMarginBottom="100"
            layoutGravity="left|bottom"
            gravity="left|v_center"/>
    <FrameLayout
            layoutWidth="100"
            layoutHeight="100"
            layoutGravity="h_center|bottom"
            background="#0000FF"/>
</FrameLayout>